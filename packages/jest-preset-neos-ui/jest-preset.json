{
  "collectCoverageFrom": [
    "src/**/*.{js,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "\\.((story|spec).(js|tsx?))$"
  ],
  "//": "The following packages are using wrong js and esbuild would warn us. As we have a lot of esm dependencies, we cant select them by hand.",
  "transformIgnorePatterns": ["/(asn1|webidl-conversions)/"],
  "unmockedModulePathPatterns": [
    "sinon"
  ],
  "setupFiles": [
    "<rootDir>/packages/jest-preset-neos-ui/src/setupBrowserEnv.js",
    "<rootDir>/packages/jest-preset-neos-ui/src/enzymeConfiguration.js"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/src/**/?(*.)spec.{js,ts,tsx}"
  ],
  "transform": {
    "^.+\\.(tsx?|js)$": "<rootDir>/packages/jest-preset-neos-ui/src/esbuildTransformer.js"
  },
  "resolver": "<rootDir>/packages/jest-preset-neos-ui/src/moduleFieldResolver.js",
  "moduleNameMapper": {
    "\\.(css|svg)$": "identity-obj-proxy"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
